<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/layer_green_light">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_green_light" />
        </shape>
    </item>
    <item android:id="@+id/layer_green_dark">
        <scale
            android:scaleWidth="80%"
            android:scaleHeight="80%"
            android:scaleGravity="center">
            <shape android:shape="ring">
                <corners
                    android:bottomLeftRadius="@dimen/shape_common_radius"
                    android:bottomRightRadius="@dimen/shape_common_radius"
                    android:topLeftRadius="@dimen/shape_common_radius"
                    android:topRightRadius="@dimen/shape_common_radius" />
                <solid android:color="@android:color/holo_green_dark" />
            </shape>
        </scale>
    </item>
</layer-list>
